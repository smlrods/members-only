extends layout

block content
  h1 Sign up
  form(action='/signup', method='post')
    section
      label(for='first_name') First Name
      input(id='first_name', name='first_name', type='text', autocomplete='first_name', required)
      label(for='last_name') Last Name
      input(id='last_name', name='last_name', type='text', autocomplete='last_name', required)
    section
      label(for='username') Username
      input(id='username', name='username', type='text', autocomplete='username', required)
    section
      label(for='password') Password
      input(id='password', name='password', type='password', autocomplete='new-password', required)
      label(for='passwordConfirmation') Password Confirmation
      input(id='passwordConfirmation', name='passwordConfirmation', type='password', required)
    button(type='submit') Sign up
